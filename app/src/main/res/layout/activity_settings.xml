<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.SettingsActivity"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <com.gelistirmen.finance.presentation.view.FMButton
        style="@style/ContentButton.Medium"
        android:id="@+id/companyProfileButton"
        android:drawableRight="@drawable/ic_right_arrow_black"
        android:drawableLeft="@drawable/ic_store_black"
        android:text="@string/company_profile" />

    <com.gelistirmen.finance.presentation.view.FMButton
        style="@style/ContentButton.Medium"
        android:id="@+id/changePasswordButton"
        android:drawableRight="@drawable/ic_right_arrow_black"
        android:drawableLeft="@drawable/ic_unlocked_black"
        android:text="@string/change_password" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gelistirmen.finance.presentation.view.FMButton
                style="@style/ContentButton.Medium"
                android:drawableLeft="@drawable/ic_bell_black"
                android:text="@string/notification_settings"/>

        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notificationsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gelistirmen.finance.presentation.view.FMButton
                style="@style/ContentButton.Medium"
                android:id="@+id/languageButton"
                android:drawableLeft="@drawable/ic_talk_bubble_black"
                android:text="@string/application_language"/>

        </LinearLayout>

        <TextView style="@style/CardView.Text.Large"
            android:id="@+id/languageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/accent"
            android:text="XX"/>

    </RelativeLayout>

    <com.gelistirmen.finance.presentation.view.FMButton
        style="@style/ContentButton.Medium"
        android:id="@+id/aboutApplicationButton"
        android:drawableRight="@drawable/ic_right_arrow_black"
        android:drawableLeft="@drawable/ic_logo_black"
        android:text="@string/about_application" />

    <com.gelistirmen.finance.presentation.view.FMButton
        style="@style/ContentButton.Medium"
        android:id="@+id/logoutButton"
        android:drawableLeft="@drawable/ic_power_black"
        android:text="@string/logout" />

</LinearLayout>